<form asp-action="ForgotPassword" asp-controller="LoginPageController" method="post">

    <div class="row mt-3">
        <div class="form-group col-xl-8 col-lg-8 col-sm-12 col-xs-12 mx-auto">
            <input name="Email" type="email" class="form-control" id="email" placeholder="Your Email" style="font-size:16px;">
        </div>
    </div>

    <div class="row mt-5">
        <div class="form-group col-xl-8 col-lg-8 col-sm-12 col-xs-12 mx-auto">
            <input type="submit" class="btn btn-primary btn-block" id="Submit" value="Send Password Reset Link" style="font-size:16px;">
        </div>
    </div>

</form>